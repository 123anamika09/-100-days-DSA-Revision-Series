class Solution {
    public int[] twoSum(int[] nums, int target) {
           int[] ans = new int[2];
          int n = nums.length;
        //  for(int i = 0;i<n;i++){
        //     for(int j = i+1;j<n;j++){
        //         if(nums[i]+nums[j] == target){
        //         ans[0] = i+1;
        //         ans[1] = j+1;
               
        //       }
        //       if(nums[i]+nums[j]>target)  break;
        //      }
        //     }

        
          int i = 0;
          int j = n-1;

            while(i<j){
                int sum = nums[i]+nums[j];
                if(sum == target) {
                    ans[0] = i+1;
                    ans[1] = j+1;
                    return ans;
                } else if(sum<target){
                     i++;
                } else j--;
            }
          return ans;
    }
}
